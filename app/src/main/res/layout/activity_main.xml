<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <com.zhjh.download.test.SubmitProcessButton
        android:id="@+id/spbtn_download"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="下载"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        custom:pb_colorProgress="@color/colorPrimaryDark"
        custom:pb_colorComplete="@color/colorPrimaryDark"
        custom:pb_colorError="@color/color_light_gray"
        custom:pb_colorNormal="@color/colorPrimaryDark"
        custom:pb_colorPressed="@color/colorTitle"
        custom:pb_colorEmpty="@color/color_light_gray"/>

    <com.zhjh.download.test.ProgressImageView
        android:id="@+id/progress_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        custom:pi_mask_color="@color/icon_progress_mask_color"
        custom:pi_progress="0"
        custom:pi_radius="56dp"
        custom:pi_stroke="5dp"/>

</RelativeLayout>